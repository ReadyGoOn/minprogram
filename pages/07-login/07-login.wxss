/* pages/07-login/07-login.wxss */

.login-content{
  width:100%;
  height:100%;
  background: linear-gradient(0deg, #395ecb 0%, #3657be 35%, #242161 85%, #1a0531 100%);
}
.login-header{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  color: #fff;
  font-size: 32rpx;
}
.login-header image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 40rpx 0rpx;
}
.login-header text:nth-of-type(1){
  margin-bottom: 20rpx;
}
.login-header text:nth-of-type(1){
  margin-bottom: 20rpx;
}

.user-pass{
  display:  block;
  padding:50rpx;
  /* background-color: #fff; */
}
.user-pass .iconfont{
  position: absolute;
  top: 17rpx;
  left: 30rpx;
  color: #999;
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.user-pass input{
  padding-left: 80rpx;
  color: #fff;
  height: 100%;
}
.user-pass input .place-color{
  color: #999;
  font-size: 32rpx;
}

.user, .pass{
  background-color: rgba(0,0,0,.3);
  height:75rpx;
  border-radius: 75rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.btn-login, .btn-reset{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 35rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
}


.btn-reg{
  display: block;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 35rpx;

}